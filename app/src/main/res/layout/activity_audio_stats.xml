<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#424242"
    android:theme="@style/AppTheme.NoActionBar">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/color_app_bar">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio_status_title"
            android:fontFamily="@font/test"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_adriver"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_drivers_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/codename"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_akernel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_kernel"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/atext"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/kernel_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_asrate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_freq"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/sr_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_abd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/bd_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_bit_depth"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/bd_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_afl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/flags_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_flags"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/flags_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_out"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/out_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_out"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/out_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_buffer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/color_accent">

            <TextView
                android:id="@+id/buffer_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:fontFamily="@font/test"
                android:text="@string/audio_status_buffer"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/buffer_status"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/test"
                android:text="@string/audio_flags_current"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ripple_effect"
        android:fontFamily="@font/test"
        android:text="@string/menu_refresh"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffffff" />

</LinearLayout>